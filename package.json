{
  "name": "neon-vscode-extension",
  "displayName": "Neon VSCode Extension",
  "description": "VSCode extension for Neon",
  "version": "1.0.0",
  "publisher": "neon",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:neon-welcome",
    "onCommand:neon-vscode-extension.signIn"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "neon-vscode-extension.signIn",
        "title": "Sign in to Neon"
      },
      {
        "command": "neon-vscode-extension.signOut",
        "title": "Sign out from Neon"
      },
      {
        "command": "neon-vscode-extension.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neon",
          "title": "Neon",
          "icon": "media/neon-icon.svg"
        }
      ]
    },
    "views": {
      "neon": [
        {
          "id": "neonExplorer",
          "name": "Neon"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "neon-vscode-extension.refreshTree",
          "when": "view == neonExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && node copy-assets.js",
    "watch": "node watch.js",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/open": "^6.2.1",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^2.19.0",
    "typescript": "^5.1.6",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "@neondatabase/api-client": "^1.13.0",
    "open": "^9.1.0",
    "openid-client": "^5.6.1"
  }
}
